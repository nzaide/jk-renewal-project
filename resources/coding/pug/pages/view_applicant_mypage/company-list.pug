extends ../../layout.pug

block nav
  a.header__login-link(href="#") ログイン
  nav.nav(class="sp:hidden")
    ul.nav__list
      li.nav__item
        a.nav__link(href="#")
          img.nav__icon(src="/public/img/icon/recruit-orange.svg" alt="recruit")
          span.nav__text 求人を探す
      li.nav__item
        a.nav__link(href="#")
          img.nav__icon(src="/public/img/icon/kutikomi-orange.svg" alt="kutikomi")
          span.nav__text 口コミを探す

block headerLinks
  .header__link-wrapper(class="sp:hidden")
    a.header__link(href="#") 新規登録
    a.header__link(href="#") ログイン

block spMenu
  .menu
    label.menu__icon-wrapper(for="menu")
      img.menu__icon(src="/public/img/icon/menu-icon.svg" alt="menu icon")
    input.menu__check#menu(type="checkbox", name="menuToggle")
    .menu__side
      label.menu__overlay(for="menu")
      .menu__side-wrapper
        .menu__header
          label.menu__icon-wrapper(for="menu")
            img.menu__icon(src="/public/img/icon/menu-icon-close.svg" alt="menu icon close")
        .menu__button-wrapper
          a.button.button--orange-reversed(href="#") ログイン
          a.button.button--orange(href="#") 無料登録
        .menu__wrapper
          ul.menu__list
            li.menu__item
              a.menu__link(href="#")
                .flex-center-layout
                  img.menu__link-icon(src="/public/img/icon/recruit-orange.svg" alt="recruit")
                  span.menu__text 求人を探す
                img(src="/public/img/icon/arrow-gray.svg" alt="arrow")
            li.menu__item
              a.menu__link(href="#")
                .flex-center-layout
                  img.menu__link-icon(src="/public/img/icon/kutikomi-orange.svg" alt="kutikomi")
                  span.menu__text 口コミを探す
                img(src="/public/img/icon/arrow-gray.svg" alt="arrow")
        p.menu__copyright Copyright © Fulfill inc. All rights reserved.

block content
  .main-wrapper
    section.section
      h2.heading.heading--underlined フォロー中の企業 (〇〇件) 
      - let n = 0
      while n < 10
        - n++
        .card.mb-4.mt-5
          .card__body
            ul.card_list
              li.card__item
                .card__title-container.card__title-container--no-border
                  a.card__title(href="#") 株式会社○○○○○
                  .card__corporation-details.items-start(class="sp:flex-col")
                    div(class="w-3/12 sp:w-full")
                      img(src="/public/img/icon/company-default-img.jpg", alt="company")

                    div.ml-3
                      .flex-center-layout.mr-4(class="sp:mt-4")
                        img.card__emoticon(src="/public/img/icon/bakusyou.svg", alt="emoticon")
                        p.card__corporation-text 評価

                        img.card__icon(src="/public/img/icon/recruit.svg", alt="recruit")
                        p.card__corporation-text 求人数
                          span.card__corporation-text.text-primary-orange.font-bold.ml-2 0件

                        img.card__icon(src="/public/img/icon/kutikomi.svg", alt="kutikomi")
                        p.card__corporation-text クチコミ
                          span.card__corporation-text.text-primary-orange.font-bold.ml-2 000件
                      
                      .flex-center-layou.mt-4
                        .card__company-details.flex
                          p.card__corporation-text.text-primary-orange.font-bold 業界
                          p.card__corporation-text ○○○○○

                        .card__company-details.flex
                          p.card__corporation-text.text-primary-orange.font-bold 住所
                          p.card__corporation-text ○○○○○
                        
                        .card__company-details.flex
                          p.card__corporation-text.text-primary-orange.font-bold URL
                          p.card__corporation-text https://www.url.com/

                    
                    .flex.justify-center.flex-col.w-32.ml-auto(class="sp:w-full sp:mt-4")
                      a.button.button--orange.button--small.mb-2
                        img.mr-2(src="/public/img/icon/white-pencil.svg", alt="edit")
                        | クチコミを書く
                        
                      a.button.button--orange-reversed.button--small フォローを解除
      .pagination 
        // For PC
        ol.pagination__list
          li.pagination__item.pagination__item--disabled
            a.pagination__link(href="#") 
              img.pagination__icon.pagination__icon--prev(src="/public/img/icon/arrow-white.svg", alt="arrow")
              | 前へ
          li.pagination__item.pagination__item--active
            a.pagination__link(href="#") 1
          li.pagination__item
            a.pagination__link(href="#") 2
          li.pagination__item
            a.pagination__link(href="#") 3
          li.pagination__item
            a.pagination__link(href="#") 次へ
              img.pagination__icon(src="/public/img/icon/arrow-gray.svg", alt="arrow")
        
        // For SP
        button.pagination__button もっと見る
          img(src="/public/img/icon/arrow.svg", alt="arrow")         


    aside.sidebar
      .sidebar__card.mb-5
        p.sidebar__card-header 個人設定
        ul.sidebar__list
          li.sidebar__item
            a.sidebar__link(href="#")
              span 会員プロフィール
              img(src="/public/img/icon/arrow-gray.svg" alt="arrow")
          li.sidebar__item
            a.sidebar__link(href="#")
              span 詳細情報
              img(src="/public/img/icon/arrow-gray.svg" alt="arrow")
          li.sidebar__item
            a.sidebar__link(href="#")
              span 転職条件
              img(src="/public/img/icon/arrow-gray.svg" alt="arrow")
          li.sidebar__item
            a.sidebar__link(href="#")
              span サイト通知設定
              img(src="/public/img/icon/arrow-gray.svg" alt="arrow")

      ul.sidebar__list.sidebar__list--rounded
        li.sidebar__item
          a.sidebar__link(href="#")
            span トップページ
            img(src="/public/img/icon/arrow.svg" alt="arrow")
        li.sidebar__item
          a.sidebar__link(href="#")
            span フォロー企業
            img(src="/public/img/icon/arrow.svg" alt="arrow")
        li.sidebar__item
          a.sidebar__link(href="#")
            span フォロー求人
            img(src="/public/img/icon/arrow.svg" alt="arrow")
        li.sidebar__item
          a.sidebar__link(href="#")
            span クチコミ管理
            img(src="/public/img/icon/arrow.svg" alt="arrow")
        li.sidebar__item
          a.sidebar__link(href="#")
            span 退会
            img(src="/public/img/icon/arrow.svg" alt="arrow")
