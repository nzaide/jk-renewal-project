extends ../profile_register.pug

block section
  .progress
    p.progress__text プロフィール登録 1 / 4 完了
    .flex.justify-end(class="mb-[25px]")
      .progress__bar-wrapper
        .progress__bar.progress__bar--25

  form.form.mx-auto(action="#" class="max-w-[800px]")
    p.form__text(class="mb-[50px] sp:mb-[25px]") 1. ご自身の性別・生年月日・お住まいについて、以下を入力してください。
    .form__wrapper
      .flex.items-center(class="min-w-[25%]")
        label.form__label(class="items-start sp:items-center") 性別
      .w-full
        .form__input-wrapper
          .form__radio-wrapper(class="sp:mb-3")
            input.form__radio#radio1(type="radio", name="gender")
            label.form__text-label.cursor-pointer(for="radio1") 男性
          .form__radio-wrapper
            input.form__radio#radio2(type="radio", name="gender")
            label.form__text-label.cursor-pointer(for="radio2") 女性
    .form__wrapper
      .flex.items-center(class="min-w-[25%]")
        label.form__label 生年月日
      .w-full
        .form__input-wrapper
          .flex.items-center(class="mr-[25px] mb-3 sp:mr-0 sp:w-full")
            select.form__select.mr-3(name="year")
              option 未選択 
              option(value="2019") 2019
              option(value="2020") 2020
              option(value="2021") 2021
              option(value="2022") 2022
            label.form__label(for="年") 年 
          .flex.items-center(class="mr-[25px] mb-3 sp:mr-0 sp:w-full")
            select.form__select.mr-3(name="month")
              option 未選択 
              option(value="1") 1
              option(value="2") 2
              option(value="3") 3
              option(value="4") 4
              option(value="5") 5
              option(value="6") 6
              option(value="7") 7
              option(value="8") 8
              option(value="9") 9
              option(value="10") 10
              option(value="11") 11
              option(value="12") 12
            label.form__label(for="月") 月 
          .flex.items-center(class="mr-[25px] mb-3 sp:mr-0 sp:w-full")
            select.form__select.mr-3(name="day")
              option 未選択 
              option(value="1") 1
              option(value="2") 2
              option(value="3") 3
              option(value="4") 4
              option(value="5") 5
              option(value="6") 6
              option(value="7") 7
              option(value="8") 8
              option(value="9") 9
              option(value="10") 10
            label.form__label(for="日") 日 
