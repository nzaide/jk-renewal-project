extends ../../../layout

block dropdown
  ul.header__list
    li.header__item
      label(for="name").header__label 山田　太郎 様
        i.fas.fa-caret-down.ml-2
      input#name.header__check(type="checkbox")
      .header__option-wrapper.header__option-wrapper--lg
        a.header__option Logout

block nav
  nav.nav
    ul.nav__list 
      li.nav__item
        a.nav__link(href="#") 管理者アカウント
      li.nav__item
        a.nav__link(href="#") 登録企業管理
      li.nav__item
        a.nav__link(href="#") 求人管理
      li.nav__item
        a.nav__link(href="#") 求職者管理
      li.nav__item
        a.nav__link(href="#") クチコミ管理

block content
  section.section(class="pt-[77px] pb-[364px]")
    .wrapper.wrapper--admin
      h2.heading 企業管理 - 企業登録

      .content(class="w-[1066px] mx-auto")
        form.form(action="")
          .form__wrapper.items-center
            .flex.items-center(class="w-1/3")
              label.form__content-label 企業名
            .form__text-wrapper
              input.form__input.text-black(type="text" class="text-base" placeholder="企業名" value="株式会社〇〇〇〇〇〇")
          .form__wrapper.items-center
            .flex.items-center(class="w-1/3")
              label.form__content-label 業界
            .form__text-wrapper
              select.form__select(name="#" class="text-base m-0 w-full rounded-[4px]")
                option(value="飲食") 飲食
                option(value="test") test
                option(value="test") test
          .form__wrapper.items-center
            .flex.items-center(class="w-1/3")
              label.form__content-label 所在地
            .form__text-wrapper
              select.form__select(name="#" class="text-base m-0 w-full rounded-[4px]")
                option(value="都道府県") 都道府県
                option(value="test") test
                option(value="test") test
          .form__wrapper.items-center
            .flex.items-center(class="w-1/3")
              label.form__content-label(class="w-3/5") アカウント発行用メールドアドレス
            .form__text-wrapper
              input.form__input.text-black(type="email" class="text-base" placeholder="アカウント発行用メールドアドレス" value="account@test.co.jp")
      .flex.justify-center.mt-8
        button.button.button--secondary.mr-5 キャンセル
        button.button.button--primary.mr-5 企業登録のみ行う
        button.button.button--primary 企業登録し、アカウントを発行する