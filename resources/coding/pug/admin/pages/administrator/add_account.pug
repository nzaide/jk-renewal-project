extends ../../layout

block dropdown
  ul.header__list
    li.header__item
      label(for="name").header__label 山田　太郎 様
        i.fas.fa-caret-down.ml-2
      input#name.header__check(type="checkbox")
      .header__option-wrapper.header__option-wrapper--lg
        a.header__option Logout

block nav
  nav.nav
    ul.nav__list 
      li.nav__item
        a.nav__link(href="#") 管理者アカウント
      li.nav__item
        a.nav__link(href="#") 登録企業管理
      li.nav__item
        a.nav__link(href="#") 求人管理
      li.nav__item
        a.nav__link(href="#") 求職者管理
      li.nav__item
        a.nav__link(href="#") クチコミ管理

block content
  section.section
    .wrapper.wrapper--sm
      h2.heading(class="mb-0") 管理者アカウント登録・編集
      .content
        form.form(action="")
          .form__wrapper
            .flex.items-center(class="min-h-[40px] w-1/3")
              label.form__content-label 管理者名
            .form__text-wrapper
              input.form__input.text-black(type="text" class="h-[40px] text-base" placeholder="管理者名を入力してください")
          .form__wrapper
            .flex.items-center(class="min-h-[40px] w-1/3")
              label.form__content-label メールアドレス
            .form__text-wrapper
              input.form__input.text-black(type="email" class="h-[40px] text-base" placeholder="メールアドレスを入力してください")
          .form__wrapper
            .flex.items-center(class="min-h-[40px] w-1/3")
              label.form__content-label パスワード
            .form__text-wrapper
              input.form__input.text-black(type="password" class="h-[40px] text-base" placeholder="パスワードを入力してください")
          .form__wrapper
            .flex.items-center(class="min-h-[40px] w-1/3")
              label.form__content-label 再パスワード
            .form__text-wrapper
              input.form__input.text-black(type="password" class="h-[40px] text-base" placeholder="パスワードを再入力してください")

      .flex.justify-center
        button.button.button--secondary.mr-10 キャンセル
        button.button.button--primary 登録・編集する